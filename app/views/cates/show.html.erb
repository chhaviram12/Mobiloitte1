
<h1>Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Date</th>
      <th>Edit</th>
      <th>Show</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    

     <% @cate.each do |cat| %>
    
           <tr>
        <td><%= cat.name %></td>
        <td><%= cat.description %></td>
               <td><%= image_tag cat.image_url, width: '20%' if cat.image.present? %></td>

        <td><%= cat.dat %></td>
        <td><%= link_to 'View', product_path(cat.id) %></td>
        <td><%= link_to 'Update', edit_product_path(cat.id) %></td>
        <td><%= link_to 'Delete', cat, method: :delete, data: {confirm: 'Are you sure?'} %></td> 

        
       </tr>
      <%end%>
    
  </tbody>
</table>

<br>




<%= link_to 'Add Product', new_product_path %> |

<%= link_to 'Edit', edit_cate_path(@cate) %> |
<%= link_to 'Back', cates_path %>


