<hr>
<h3>Category</h3>

<p class="navbar-text float-right">
<%= link_to 'New Category', new_cate_path %> | <%= link_to 'New Product', new_product_path %>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Category</th>
      <th>Show</th>
      <th>Edit</th>
      <th>Destroy</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cates.each do |cate| %>
      <tr>
        <td><%= cate.productname %></td>
        <td><%= link_to 'Show', cate_path(cate.id) %></td>
        <td><%= link_to 'Edit', edit_cate_path(cate.id) %></td>
        <td><%= link_to 'Destroy', cate_path(cate.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

