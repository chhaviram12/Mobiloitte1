
<h3>Products</h3>
<p class="navbar-text float-right">
<%= link_to 'New Product', new_product_path %> | <%= link_to 'New Category', new_cate_path %> <br>
</p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Image</th>
      <th>Date</th>
      <th>Edit</th>
      <th>Show</th>
      <th>Delete</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    

     <% @products.each do |product| %>
    
           <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
               <td><%= image_tag product.image_url, width: '20%' if product.image.present? %></td>

        <td><%= product.dat %></td>
        <td><%= link_to 'View', product %></td>
        <td><%= link_to 'Update', edit_product_path(product) %></td>
        <td><%= link_to 'Delete', product, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
      </tr>
      <%end%>
    
  </tbody>
</table>

<br>

